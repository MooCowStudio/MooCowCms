<p id="notice"><%= notice %></p>

<h1>Layouts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @layouts.each do |layout| %>
      <tr>
        <td><%= layout.name %></td>
        <td><%= layout.site %></td>
        <td><%= layout.filename %></td>
        <td><%= link_to 'Show', [:admin, layout] %></td>
        <td><%= link_to 'Edit', edit_admin_layout_path(layout) %></td>
        <td><%= link_to 'Destroy', [:admin, layout], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Layout', new_admin_layout_path %>
