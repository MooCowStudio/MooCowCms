<% provide(:title, @doc.title) %>
<% provide(:meta_title, @doc.title) %>
<% provide(:meta_type, "article") %>
<% provide(:meta_url, "https://moocow-cabbage.com/docs/#{@doc.filename}.html") %>
<% provide(:meta_image, @doc.image.url) %>
<% provide(:meta_description, @doc.description) %>
<% provide(:crumb, breadcrumb_html([{title: @doc.title, url: "/docs/#{@doc.filename}.html"}])) %>

<div class="article">
  <!-- 公開日の表示 -->
  <p class="created-date">
    <time><%= @doc.created_at.strftime("%Y/%m/%d") %></time>
  </p>
  <!-- タイトルの表示 -->
  <h2 class="article-title"><%= @doc.title %></h2>
  <!-- 本文の表示 -->
  <span id="doc-image"></span>

  <%= @doc.body.html_safe %>
  <div class="sns-btn">
    <div class="twitter-btn">
      <a href="https://twitter.com/share?url=<%= "https://moocow-cabbage.com/docs/#{@doc.filename}.html" %>&via=@moocow_st&related=@moocow_st&hashtags=キャベツ,MooCowキャベツ&" rel="nofollow" target="_blank">
      <div><i class="fab fa-twitter"></i></div></a>
    </div>
    <div class="facebook-btn">
      <a href="http://www.facebook.com/share.php?u=<%= "https://moocow-cabbage.com/docs/#{@doc.filename}.html" %>" rel="nofollow" target="_blank"><div><i class="fab fa-facebook-f"></i></div></a>
    </div>
    <div class="hatebu-btn">
      <a href="http://b.hatena.ne.jp/add?mode=confirm&url=<%= "https://moocow-cabbage.com/docs/#{@doc.filename}.html" %>&title=<%= @doc.title %>"target="_blank"
       rel="nofollow"><div>B!</div></a>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(function() {
    var hostUrl= "/api/v1/access_logs";
    var site_id = <%= @doc.site_id %>;
    var doc_id = <%= @doc.id %>;
    $.ajax({
      url: hostUrl,
      type:'POST',
      dataType: 'json',
      data : {access_log: {site_id: site_id, doc_id: doc_id }},
      timeout:3000
    })

    var hostUrl= "/api/v1/doc_images/<%= @doc.id %>";
    $.ajax({
      url: hostUrl,
      type:'GET',
      dataType: 'json',
      timeout:3000,
    }).done(function(data) {
      var tag = '<img src="' + data['src'] + '" alt="<%= @doc.title %>" class="img-article" >';
      $("#doc-image").append(tag);
    })

    //var image = $('img[src*="example.org"]')[0];
    //var src = image.attr("src");
    //src.replace(/example.org/g, location.host);
    //image.attr("src", src);
  });
</script>
